<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listview_route_name_label"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="start"
                android:padding="2dp"
                android:text="@string/menu_listview_route_name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_route_name_value"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="start"
                android:padding="2dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/listview_route_drone_name_label"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="start"
                android:padding="2dp"
                android:text="@string/menu_listview_drone_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_route_drone_name_value"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="start"
                android:padding="2dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listview_route_start_label"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="start"
                android:padding="2dp"
                android:text="@string/menu_listview_route_start"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_route_start_value"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="start"
                android:padding="2dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listview_route_end_label"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="start"
                android:padding="2dp"
                android:text="@string/menu_listview_route_end"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_route_end_value"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="start"
                android:padding="2dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listview_route_length_label"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="start"
                android:padding="2dp"
                android:text="@string/menu_listview_route_length"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listview_route_length_value"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="start"
                android:padding="2dp" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/listview_route_status_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO"
        android:padding="10dp"
        android:src="@drawable/ic_drone" />

</LinearLayout>